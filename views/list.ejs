    <%- include("header") -%>
    <div class="box" id="heading">

        <h1><%= LIST_TITLE %></h1>

    </div>
    
    <div class="box">
        
        
        <% TASK.forEach(element=>{ %> 
             <!--  Means only run this JS code -->
            <form action="/delete" method="post">
                <div class="item">    
                    <input type="checkbox" name="checkbox" onchange="this.form.submit()" value="<%= element._id %>">
                    <p> <%= element.task %> </p> 
                </div>
                <input type="hidden" name="listName" value="<%= LIST_TYPE %>">
            </form>
             <!--  Means print tha value of this variable in the HTML Document -->
        <% }) %>
         

        <form class="item" action="/" method="post">
            <!-- always remember to put a name for every thing in the form -->
            <input type="text" name="taskName" placeholder="Enter a task!" autocomplete="off">
            <button type="submit" name="listType" value="<%= LIST_TYPE %>">+</button>
        </form>
    </div>

   
    <%- include("footer") -%>
    
    
